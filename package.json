{
    "name": "kaspa-agent-pay",
    "version": "0.1.0",
    "private": true,
    "description": "Autonomous agent-to-agent micropayments on Kaspa using HTTP 402",
    "scripts": {
        "build": "pnpm -r build",
        "dev": "pnpm -r --parallel dev",
        "test": "pnpm -r test",
        "clean": "pnpm -r clean && rm -rf node_modules",
        "format": "prettier --write \"**/*.{ts,json,md}\"",
        "lint": "eslint \"packages/**/src/**/*.ts\"",
        "start:grocery": "./scripts/start-grocery.sh",
        "stop:grocery": "./scripts/stop-grocery.sh"
    },
    "keywords": [
        "kaspa",
        "x402",
        "micropayments",
        "agent",
        "a2a"
    ],
    "engines": {
        "node": ">=20.0.0",
        "pnpm": ">=8.0.0"
    },
    "devDependencies": {
        "@types/node": "^20.11.0",
        "prettier": "^3.2.4",
        "typescript": "^5.3.3"
    }
}